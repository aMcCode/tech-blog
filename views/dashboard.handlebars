{{#if posts.length}}

<h3>{{user.username}}'s Posts</h3>
{{#each posts as |post|}}
  <ul class="list">
    <li class="list-item">{{> post-info post }}</li>
  </ul>
{{/each}}

{{/if}}

<button type="submit" class="new-post-btn"><a class="link" href="/dashboard/new">Add New Post</a></button>

<script src="/js/newPost.js"></script>