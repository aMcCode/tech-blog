<div class="comments">
  {{#each post.comments as |comment|}}
    <div class='comment-div'>
    <p>Comment by {{comment.user.username}} on {{format_date comment.created_at}}</p>
    {{#if (isUsersObj comment.user.username ../authName)}}
      <textarea title="{{comment.id}}" comment-id="{{comment.id}}" post-id='{{../post.id}}' class="editable-comment">{{comment.comment}}</textarea>
      <button class="comment-update-btn" type="button" id="{{comment.id}}" post-id='{{../post.id}}'>Update Comment</button>
      <button class="comment-del-btn" type="button" id='{{comment.id}}' post-id='{{../post.id}}'>Delete Comment</button>
    {{else}}
      <textarea class="comment" readonly>{{comment.comment}}</textarea>
      </div>
    {{/if}}
    {{/each}}
</div>
